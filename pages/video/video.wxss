.videoContainer .header{
    display: flex;
    justify-content: space-between;
    padding: 10rpx;
}
.videoContainer .header .search{
    /*flex-grow 可拉伸*/
    /*flex-shrink 可压缩*/
    /*flex-basis 当前元素的宽度*/
    /*flex:auto; flex-grow:1,flex-shrink:1,flex-basis:auto*/
    /*flex:1; flex-grow:1,flex-shrink:1,flex-basis:0%*/
    /*flex为1 会导致父元素宽度自动为100%*/
    flex: 1;
    border: 1rpx solid #eee;
    margin: 0 20rpx;
    font-size: 26rpx;
    line-height: 60rpx;
    color: #d43c33;
    text-align: center;
}
.videoContainer .header image{
    width: 60rpx;
    height: 60rpx;
}

/*导航区域*/
.navScroll{
    display: flex;
    white-space: nowrap;
    height: 60rpx;
}
.navScroll .navItem{
    padding: 0 30rpx;
    font-size: 28rpx;
    line-height: 60rpx;
    height: 60rpx;
}
.navScroll .navContent{
    height: 60rpx;
    box-sizing:border-box;
}
.active{
    border-bottom: 1rpx solid #d43c33;
}

/*视频列表*/
.viewScroll{
    margin-top: 10rpx;
    /*动态计算css宽高*/
    /*1vh=1%的视口高度*/
    /*1vw=1%的视口宽度*/
    height: calc(100vh - 152rpx);
}
.videoItem{
    padding: 0 3%;
}
.viewScroll video{

}
.videoItem .common{
    width: 100%;
    height: 360rpx;
    border-radius: 10rpx;
}
.videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.videoItem{
    position: relative;
}
.videoItem .infoplay{
    position: absolute;
    left: 50%;
    top: 30%;
    transform: translate(-50%,-50%);
    font-size: 100rpx;
}
/* footer */
.footer {
    border-top: 1rpx solid #eee;
    padding: 20rpx 0;
}
.footer .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    vertical-align: middle;
}

.footer  .nickName {
    font-size: 26rpx;
    vertical-align: middle;
    margin-left: 20rpx;
}

.footer .comments_praised {
    float: right;
}

.comments_praised .btn {
    display: inline;
    padding: 0;
    background-color: transparent;
    border-color: transparent;
}

.comments_praised .btn:after {
    border: none;
}

.comments_praised .item {
    margin-left: 50rpx;
    position: relative;
}

.comments_praised .item .count {
    position: absolute;
    top: -20rpx;
    font-size: 20rpx;
}
